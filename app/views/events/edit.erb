<h1>Edit the event using the form below.</h1>

<div class="col-md-4">
  <form method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="name">Name:</label><br>
      <input type="text" id="name" name="event[name]" class="form-control" placeholder="Name" require value="<%=@event.name%>">
    </div>
    <div class="form-group">
      <label for="datetime">Date and Time:</label><br>
      <input type="text" id="datetime" name="event[datetime]" class="form-control" placeholder="Date and/or time" require value="<%=@event.datetime%>">
    </div>
    <div class="form-group">
      <label for="description">Description:</label><br>
      <input type="text" id="description" name="event[description]" class="form-control" placeholder="Event description" require value="<%=@event.description%>">
    </div>
    <button type="submit" class="btn btn-primary">Edit Event</button>
  </form>
</div>