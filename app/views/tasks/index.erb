<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><a href="/events/<%=@event.id%>"><%= @event.name %></a> - <%= @event.description %></h1>

<% if !@event.tasks.empty? %>
  <ol>
    <form method="post" action="/events/<%=@event.id%>/tasks">
      <input type="hidden" id="hidden" name="_method" value="patch">
      <% @event.tasks.each do |task| %>
        <li><input id="task_status" type="checkbox" name="task[completed]" <%= 'checked' if !!task.completed%>><a href="/tasks/<%=task.id%>"><%= task.name %></a></li>
      <% end %>
      <input type="submit" value="Save">
    </form>
  </ol>
<% else %>
  <h3>You don't have any tasks for this event yet. Try adding some!</h3>
<% end %>

<% if Helpers.current_user(session).id.equal?(@event.user.id)%>
  <a href="/events/<%=@event.id%>/tasks/new">Make a new task</a>
<% end %>
